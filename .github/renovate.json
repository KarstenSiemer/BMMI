{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":prImmediately",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":configMigration"
  ],
  "schedule": [
    "at any time"
  ],
  "ignorePaths": [],
  "dependencyDashboard": true,
  "automergeType": "pr",
  "automergeStrategy": "rebase",
  "kubernetes": {
    "fileMatch": [
      "^deploy/kustomize/.+\\.ya?ml$"
    ]
  },
  "kustomize": {
    "fileMatch": [
      "(^|/)kustomization\\.ya?ml$"
    ]
  },
  "prCreation": "immediate",
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": false
    },
    {
      "matchFileNames": [
        "deploy/kustomize/overlays/prod/**"
      ],
      "additionalBranchPrefix": "{{parentDir}}-"
    },
    {
      "matchFileNames": [
        "deploy/kustomize/overlays/test/**"
      ],
      "additionalBranchPrefix": "{{parentDir}}-"
    }
  ]
}
